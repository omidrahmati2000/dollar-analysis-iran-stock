# Iran Market Trading Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=iran_market_data
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# =============================================================================
# API Keys - IMPORTANT: Get your keys from https://brsapi.ir
# =============================================================================
# BRS API Keys for Iran market data
BRSAPI_FREE_KEY=your_free_api_key_here
BRSAPI_PRO_KEY=your_pro_api_key_here

# =============================================================================
# API Configuration
# =============================================================================
API_BATCH_SIZE=10
API_DELAY_SECONDS=1
MAX_RETRIES=3

# =============================================================================
# Security Configuration - IMPORTANT: Change in production
# =============================================================================
# JWT Secret Key - MUST be changed in production
SECRET_KEY=your-super-secret-jwt-key-change-in-production-minimum-32-chars

# =============================================================================
# Application Settings
# =============================================================================
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# Web Platform Settings
# =============================================================================
HOST=0.0.0.0
PORT=8000
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# Redis Configuration (optional - for future features)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# Docker Settings (if using Docker)
# =============================================================================
# These are automatically handled by docker-compose.yml
# POSTGRES_DB=iran_market_data
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres123